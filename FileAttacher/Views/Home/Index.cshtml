<style>
    #fine-uploader {
        margin-top:15px;
        padding-left:20px;
        padding-right:20px;
        min-height: 200px;
    }
    .header-cat {
        margin: 15px 0px 30px;
    }
    .icon-file {
        margin-right: 15px;
    }
    #newFolderInput {
        margin-left:10px;
        margin-bottom: 0px;
    }
    #fileTable {
        border-top:none;
    }
    .file-controls {
        line-height:35px;
    }
    #appContent.file-controls {
        margin-top:10px;
    }
    .table thead tr {
        margin: 10px 0;
        font-family: inherit;
        line-height: 20px;
        color: inherit;
        text-rendering: optimizelegibility;
        font-size: 17.5px;
    }
    .main-cat {
        font-family: inherit;
        line-height: 20px;
        color: #999;
        text-rendering: optimizelegibility;
        font-size: 17.5px;
    }
    tbody tr .btn {
        cursor: pointer;
    }
    tbody tr i {
        cursor: pointer;
    }
    tbody .name-col {
        min-width: 225px;
        cursor: pointer;
    }
    thead .first-col-head {
        min-width: 30px;
    }
    thead .name-col-head {
        min-width:225px;
    }
    #emptyTableView {
        font-size:17.5px;
        color:#999;
        cursor:pointer;
    }
    #emptyTableView i {
        margin-left:2%;
    }
    .pad-draggable {
        padding-left:100px;
    }
    .drag-table-item {
        color: WHITE;
        background: #92aab3;
        padding: 7px;
        border-radius: 5px;
        border: 2px solid gray;
    }
</style>

<div id="ViewModel">
    <div class="container">
        <div class="row-fluid" >

            <div id="careNav" class="span3 fix-height">
                <!--<p>STATIC COL SPAN3</p>-->
            </div>

            <div id="appContent" class="span9 fix-height">
                <div class="header-cat">
                    <span class="span4 main-cat">FILES - DISCHARGE NOTES</span>
                    <span class="offset4 file-controls">
                        <i title="New File" data-placement="top" data-bind="click:ModalViewModel.showModal" class="icon-file"></i>
                        <i title="New Folder" data-placement="top" data-bind="click:$root.MainViewModel.showFolderInput" class="icon-folder-open"></i>
                        <input type="text" class="input-medium" id="newFolderInput" data-bind="visible:$root.MainViewModel.createNewFolder, value:$root.MainViewModel.newFolderName" />
                        <i data-bind="visible:$root.MainViewModel.createNewFolder, click:$root.MainViewModel.createFolder" class="icon-plus"></i>
                    </span>
                </div>

                <!-- File(s) table -->
                <div id="table-container">
                    <!-- File(s) table header -->
                    <ul>
                        <li>
                            <button class="btn btn-mini btn-info" data-bind="visible:$root.MainViewModel.folderNav().length > 1, click:$root.MainViewModel.navBack">
                                <i class="icon-white icon-chevron-left"></i>
                            </button>
                        </li>
                        <li class="name-col-head">Name</li>
                        <li>Type</li>
                        <li><i title="Download File" data-placement="top" class="icon-download-alt"></i></li>
                        <li>&nbsp;</li>
                    </ul>
                    <!-- Folder(s) table body-->
                    <ul data-bind="foreach: $root.MainViewModel.folders, visible: ($root.MainViewModel.files().length > 0 && $root.MainViewModel.folders().length > 0)">
                        <li>
                            <span><i data-bind="visible: MimeType == 'folder', click:$root.MainViewModel.openFolderWrap" class="icon-folder-close"></i></span>
                            <span data-bind ="text: MimeType"></span>
                            <span data-bind="click:$root.MainViewModel.zipFolder">zip</span>
                            <span><i title="Delete" data-placement="right" data-bind="click:$root.MainViewModel.removeFolder" class="icon-trash"></i></span>
                        </li>
                    </ul>
                    <!-- File(s) table body -->
                    <ul data-bind="foreach: $root.MainViewModel.files, visible: ($root.MainViewModel.files().length > 0 && $root.MainViewModel.folders().length > 0)">
                        <li>
                            <span>
                                <!--<a id="imgblow" data-bind="attr: { href: '/S3Web/GetFile?FileName=' + Filename + '&S3FileName=' + Key }">
                                        <i data-bind="click:$root.MainViewModel.showImage, visible: MimeType == 'image/jpeg'" class="icon-fullscreen"></i>
                                </a>-->
                            </span>
                            <span class="name-col" data-bind="text: Filename"></span>
                            <span data-type="text:MimeType"></span>
                            <span>
                                <!--
                                <a data-bind="attr: { href: '/S3Web/GetFile?FileName=' + Filename + '&S3FileName=' + Key },  target:'_blank'" class=" btn btn-small"><i class="icon-download"></i></a>
                                -->
                            </span>
                            <span><i data-bind="click:$root.MainViewModel.removeFile" class="icon-trash"></i></span>
                        </li>
                    </ul>
                </div> <!-- End .table-container -->

                <!-- Empty Table? Show message-->
                <div id="emptyTableView" data-bind="visible: ($root.MainViewModel.files().length < 1 && $root.MainViewModel.folders().length < 1), click: ModalViewModel.showModal">
                    <p class="text-center">ADD A FILE <br /><br /><i class="icon-file"></i></p>
                </div>

            </div>
        </div>
    </div>
    <!-- MODAL -->
    <!-- Create a modal via custom binding -->
    <div data-bind="bootstrapModal:ModalViewModel.modal" data-keyboard="false" data-backdrop="static"></div>

    <!-- Modal template -->
    <script id="myModal" type="text/html">
        <div class="modal-header">
            <button type="button" class="close" data-bind="click:close" aria-hidden="true">&times;</button>
            <h3 data-bind="html:header"></h3>
        </div>
        <!-- Fine Uploader binding -->
        <div id="fine-uploader"></div>
        <div class="modal-footer">
            <a href="#" class="btn" data-bind="click:close,html:closeLabel"></a>
            <a href="#" class="btn btn-primary" data-bind="click:action,html:primaryLabel"></a>
        </div>
    </script>        

</div>

